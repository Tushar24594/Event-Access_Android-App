<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notificationTimeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="28 March 10:30 am"
            android:paddingLeft="5sp"
            android:textSize="18sp"
            android:textColor="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notificationTimeText"
            android:background="@color/cardbg"
            android:divider="@drawable/empty_tall_divider"
            android:orientation="vertical"
            android:padding="30sp"
            android:showDividers="middle"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/notificationImage"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/roger" />

            <TextView
                android:id="@+id/notificationheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notifiheader"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/notificationdescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:isScrollContainer="true"
                android:justificationMode="inter_word"
                android:text="@string/notifiDesc"
                android:textColor="@color/grey"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>